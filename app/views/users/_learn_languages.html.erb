<% @language_items.each do |item| %>
  <li class="list-group-item">
    <%= form_for(@user.speeches.find_by(language_id: Language.find_by(name: item.name).id), html: { method: :delete}) do |f|%>
      <%= item.name %>
      <% if current_user?(@user) %>
        <%= f.submit "Forget", class: "btn" %>
      <% end %>
    <% end %>
  </li>
<% end %>