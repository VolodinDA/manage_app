<%= form_with model: Ability do |f| %>
  <div class="panel panel-success">
    <div class="panel panel-heading">
      <%= f.label "Ability form" %>
    </div>
    <div class="panel panel-body">
      <div class="myform">

        <%= f.label "Description of the ability" %>
        <%= f.text_field :description, placeholder: "New ability" %>

        <%= f.submit "Create an ability", class: "btn btn-lg btn-success" %>

      </div>
    </div>
  </div>
<% end %>