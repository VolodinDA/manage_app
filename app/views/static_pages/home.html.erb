<% if !signed_in?%>

<div class="jumbotron">
	<div class="container">
		<h1>Welcome to the N Enterprise!</h1>
		<p>This is application for personel management of the N Enterprise</p>
		<p><a><%= link_to "Sign up now!", signup_path, class: "btn btn-primary btn-lg" %></a></p>
	</div>
</div>

<% else %>

  <h1>General information board</h1>
	<div class="row">

		<div class="col-lg-4">
			<div class="panel panel-success">
				<div class="panel-heading">
					<h3><%=Department.count %> Departments</h3>
				</div>
				<div class="panel-body">
					<ul><%= render @departments %></ul>
          <%= will_paginate @departments, param_name: 'departments_page' %>
				</div>
        <% if admin?(current_user) %>
          <%= render 'shared/new_department_form' %>
        <% end %>
			</div>
		</div>

    <div class="col-lg-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3><%=Language.count %> Languages</h3>
        </div>
        <div class="panel-body">
          <ul><%= render @languages %></ul>
          <%= will_paginate @languages, param_name: 'languages_page' %>
        </div>
        <% if admin?(current_user) %>
          <%= render 'shared/new_language' %>
        <% end %>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3><%=Ability.count %> Abilities</h3>
        </div>
        <div class="panel-body">
          <ul><%= render @abilities %></ul>
          <%= will_paginate @abilities, param_name: 'abilities_page' %>
        </div>
        <% if admin?(current_user) %>
          <%= render 'shared/new_ability' %>
        <% end %>
      </div>
    </div>

  </div>

  <div class="row">

    <div class="col-lg-5">
      <div class="panel panel-warning">
        <div class="panel-heading">
          <h3><%= Reward.count %> Rewards</h3>
        </div>
        <div class="panel-body">
          <ul><%= render @rewards %></ul>
          <%= will_paginate @rewards, param_name: 'rewards_page' %>
        </div>
        <% if admin?(current_user) %>
          <%= render 'shared/new_reward' %>
        <% end %>
      </div>
    </div>

    <div class="col-lg-7">
      <div class="panel panel-warning">
        <div class="panel-heading">
          <h3><%= Errand.count %> Errands</h3>
        </div>
        <div class="panel-body">
          <ul><%= render @errands %></ul>
          <%= will_paginate @errands, param_name: 'errands_page' %>
        </div>
        <% if admin?(current_user) %>
          <%= render 'shared/new_errand' %>
        <% end %>
      </div>
    </div>

  </div>

<% end %>
